{% extends 'base.html.twig' %}

{%  block body %}
    <div class="container">
        <div class="row">
            <div class="col s8">
                <h3>Editer mon Mot de passe</h3>
            </div>
        </div>
    </div>
    <div class="col s4">
        {% for type, messages in app.session.flashbag.all() %}
            {% for message in messages %}
                <div class="flashes {{ type }} pink lighten-3">
                    <span class="flash-{{ type }} white-text">{{ message }}</span>
                    {% if type == 'danger' %}
                        <i class="material-icons right">error</i>
                    {% endif %}
                </div>
            {% endfor %}
        {% endfor %}
    </div>
    {{ form_start(form) }}
    {{ form_widget(form) }}
    <button class="btn">{{ button_label|default('Sauvegarder') }}</button>
    {{ form_end(form) }}

{% endblock %}
