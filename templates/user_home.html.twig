{% extends 'base.html.twig' %}

{% block title %}Easy Auto{% endblock %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col s3 mgt30">
                <div class="col s12">
                    <h5><b>Bonjour {{ user.firstname }} {{ user.lastname }}</b></h5>
                </div>

            </div>
            <div class="col s8 offset-s1 mgt30">
                <div class="col s12">
                    <h5><b>Vos appels Ã  traiter</b></h5>
                </div>
                <div class="col s12">
                    <ul class="list-calls">
                        {% for call in calls %}
                        <li class="collection-item ">
                            <span class="title"><b>{{call.client.name}}</b></span>
                            <a href="#!" class="secondary-content"><span class="chip light-blue white-text">{{call.recallPeriod.name}} {{call.recallHour|date('H:i')}}</span></a>

                            <p>{{call.client.phone}}<br>
                                <small>{{call.subject.name}} - {{call.comment.name}}</small>
                            </p>
                        </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>

        </div>
    </div>

{% endblock %}
